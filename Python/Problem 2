import math

k=0
num = []

while 1==1:
    k = k+1
    if int((1/math.sqrt(5))*(pow(((1+math.sqrt(5))/2),k)-pow(((1-math.sqrt(5))/2),k))) > 4000000:
        break

for i in range(0,k):
    n = int((1/math.sqrt(5))*(pow(((1+math.sqrt(5))/2),i)-pow(((1-math.sqrt(5))/2),i)))
    if n%2 == 0 and n<=4000000:
        num.append(n)
print(sum(num))
